 <div class="container" style="width: 600px;">

  <div class="card card-body mt-5 " style="width: 25rem;">
    <%= @picture.genre %>
    <br>
    <%= @picture.content %>
    <br>
    <%= image_tag @picture.image.url, size: '300x300' if @picture.image? %>
  </div>

  <br>
  <% if @favorite.present? %>
    <%= link_to '❤️', favorite_path(id: @favorite.id), method: :delete, class: 'btn' %>
  <% else %>
    <%= link_to '♡', favorites_path(picture_id: @picture.id), method: :post, class: 'btn' %>
  <% end %>

  <%= link_to '戻る',pictures_path %>

  <% if @picture.user == current_user %>
    <%= link_to '編集', edit_picture_path(@picture) %>
  <% else %>
    <td></td>
  <% end %>

</div>




